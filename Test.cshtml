@section Scripts {
    <script>
        function test() {

            $.ajax({
                type: "POST",
                url: "WS/wsUsers.asmx/Contact",
                cache: false,
                contentType: "application/json; charset=utf-8",
                data: JSON2.stringify({ "email": $("#email").val()}),
                dataType: "json",
                success: function (data) {
                    if (data.d.Status) {
                        alert('success');

                    } else {
                        alert('no-success');
                    }
                },
                error: function (data) {
                    alert("Web-Service Error!!");
                }
            });


        }
    </script>

}

<form id="form_contatti" class="form-horizontal">
<input id="email" type="text" value="prova" />
    <input id="Button1" type="button" value="button" onclick="test()"/>
</form>